{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2020", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015",
    "noPropertyAccessFromIndexSignature": true,
    "paths": {
      "@mostval/common": ["packages/common/src/index.ts"],
      "@mostval/ddd": ["packages/ddd/src/index.ts"],
      "@mostval/nestjs-utils": ["packages/nestjs-utils/src/index.ts"],
      "@mostval/pipeline": ["packages/pipeline/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
