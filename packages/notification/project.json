{
  "name": "@mostval/notification",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/notification/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "tags": ["lib"],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/notification",
        "main": "packages/notification/src/index.ts",
        "tsConfig": "packages/notification/tsconfig.lib.json",
        "format": ["cjs"],
        "assets": ["packages/notification/*.md"],
        "generatePackageJson": true
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  }
}
