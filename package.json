  "scripts": {
    "security-check": "npm audit --only=prod",
    "update-prod-deps": "npm audit fix --only=prod",
    "local-registry": "nx run @mostval/platform:local-registry",
    "nx-release-publish": "nx run-many -t nx-release-publish",
    "nx-build-all": "nx run-many --target=build --all=true --skip-nx-cache=true --verbose=true",
    "nx-lint-all": "nx run-many --target=lint --all=true --skip-nx-cache=true --verbose=true",
    "nx-test-all": "nx run-many --target=test --all=true --skip-nx-cache=true --verbose=true",
    "nx-format-all": "nx run-many --target=format --all=true --skip-nx-cache=true --verbose=true"
  },
