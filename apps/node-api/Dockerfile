# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build node-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t node-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system node-api && \
          adduser --system -G node-api node-api

COPY dist/apps/node-api node-api/
RUN chown -R node-api:node-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix node-api --omit=dev -f install

CMD [ "node", "node-api" ]
