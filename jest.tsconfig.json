{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2020",
		"lib": ["es2020", "dom"],
		"types": ["jest", "node"],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": false,
		"noEmit": true,
		"declaration": false,
		"declarationMap": false,
		"emitDeclarationOnly": false,
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@tests/*": ["tests/*"]
		}
	},
	"include": [
		"jest.config.ts",
		"jest.setup.ts",
		"**/*.test.ts",
		"**/*.spec.ts",
		"**/*.test.tsx",
		"**/*.spec.tsx",
		"libs/**/*.ts",
		"libs/**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"dist",
		"coverage",
		"**/*.d.ts"
	]
}
